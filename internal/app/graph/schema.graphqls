type Tolpi {
  _id: ID!
  text: String!
  timestamp: Int!
  user: User!
  country: String!
}


type User {
  _id: ID!
  avatar: String!
  userId: String!
  firstName: String!
  lastName: String!
  country: String
  trackerList: [String!]
}

type Query {
  Tolpies(country: String!): [Tolpi!]!
  User(userId: String!): User!
}

input NewUser {
  avatar: String!
  firstName: String!
  lastName: String!
}

input NewTolpi {
  text: String!
  country: String!
}

type Mutation {
  createUser(input: NewUser!): User!
  setCountry(country: String!): User!
  
  createTolpi(input: NewTolpi!): Tolpi!
}

type Subscription {
  Tolpies(userId: String!): [Tolpi!]!
}
